@model Store.WebApp.ViewModels.CustomerWithOrderViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>
</div>
<div>
@if (Model.Orders.Count > 0)
{
    <h5>Orders placed:</h5>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Orders.First().OrderNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Orders.First().LocationId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Orders.First().Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Orders.First().OrderTotal)
                </th>
            </tr>
        </thead>
        <tbody>
@foreach (var order in Model.Orders)
{
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => order.OrderNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.LocationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.OrderTotal)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Orders", new { id = order.})
                </td>
            </tr>
}
        </tbody>
    </table>
}
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
