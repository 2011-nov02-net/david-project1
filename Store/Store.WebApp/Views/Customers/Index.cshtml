@model IEnumerable<Store.Library.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    <form asp-action="Index" method="get">
        <label for="firstNameSearch">First Name</label>
        <input name="firstNameSearch" id="firstNameSearch" type="text" />
        <label for="lastNameSearch">Last Name</label>
        <input name="lastNameSearch" id="lastNameSearch" type="text" />
        <input type="submit" />
    </form>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Select", "Select", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
